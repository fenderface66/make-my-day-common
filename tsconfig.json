{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,        /* Enables intero between CommonJS and ES */
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "declaration": true
}
